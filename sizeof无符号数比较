# 10k-code4
#define _CRT_SECURE_NO_WARNINGS 1
#include<stdio.h>
int i = 0;//全局变量没有初始化时,默认为0;
int main()
{
	i--;
	//-1
	//10000000000000000000000000000001	原码
	//11111111111111111111111111111110	反码
	//11111111111111111111111111111111	补码
	if (i > sizeof(i))	//sizeof计算所占内存空间的大小 是无符号数 结果>=0
	{	//当一个整形和一个无符号数比较时,会把整形自动转换成无符号数
		//所以i变成无符号数为01111111111111111111111111111111;
		printf(">\n");
	}
	else
	{
		printf("<\n");
	}
	return 0;
}//结果是>
